{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "cmake-dev",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CONFIGURATION_TYPES": "Debug;Release",
        "CMAKE_CXX_FLAGS": "/EHsc /MP /W4 /WX /external:W0 $penv{CXXFLAGS}",
        "CMAKE_CXX_FLAGS_RELEASE": "/O2 /DNDEBUG"
      },
      "errors": {
        "deprecated": true
      },
      "warnings": {
        "deprecated": true,
        "dev": true
      }
    },
    {
      "name": "vcpkg",
      "hidden": true,
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
    },
    {
      "name": "windows",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreaded$<$<CONFIG:Debug>:Debug>",
        "VCPKG_TARGET_TRIPLET": "x64-windows-mixed"
      }
    },
    {
      "name": "vs2026",
      "hidden": true,
      "generator": "Visual Studio 18 2026",
      "toolset": "v145"
    },
    {
      "name": "vs2022",
      "hidden": true,
      "generator": "Visual Studio 17 2022",
      "toolset": "v143"
    },
    {
      "name": "ae",
      "hidden": true,
      "binaryDir": "${sourceDir}/buildae",
      "cacheVariables": {
        "BUILD_SKYRIMAE": true
      }
    },
    {
      "name": "vs2022-windows-vcpkg-ae",
      "inherits": ["cmake-dev", "vcpkg", "windows", "vs2022", "ae"]
    },
    {
      "name": "vs2026-windows-vcpkg-ae",
      "inherits": ["cmake-dev", "vcpkg", "windows", "vs2026", "ae"]
    }
  ],
  "buildPresets": [
    {
      "name": "vs2022-windows-vcpkg-ae",
      "configurePreset": "vs2022-windows-vcpkg-ae",
      "configuration": "Release"
    },
    {
      "name": "vs2026-windows-vcpkg-ae",
      "configurePreset": "vs2026-windows-vcpkg-ae",
      "configuration": "Release"
    }
  ]
}
